<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Playlists</title>
    <link rel="stylesheet" href="/styles/playlists.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Your Playlists</h1>
        </div>
        <div class="content">
            <table>
                <thead>
                    <tr>
                        <th>Playlist Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% playlists.forEach(playlist => { %>
                        <tr>
                            <td><%= playlist.name %></td>
                            <td>
                                <a href="/playlists/<%= playlist.id %>/view" class="button">View</a>
                                <a href="/playlists/<%= playlist.id %>/edit" class="button">Edit</a>
                                <form action="/playlists/<%= playlist.id %>?_method=DELETE" method="POST" style="display:inline;">
                                    <button type="submit" class="button">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="return-buttons">
            <a href="/" class="button">Home</a>
            <a href="/auth/logout" class="button">Logout</a>
        </div>
    </div>
</body>
</html>