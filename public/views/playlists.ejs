<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Playlists</title>
</head>
<body>
    <h1>Playlists for <%= user.displayName %></h1>
    <form action="/playlists/create" method="POST">
        <input type="hidden" name="user_id" value="<%= user.id %>">
        <input type="text" name="name" placeholder="Playlist Name" required>
        <button type="submit">Create Playlist</button>
    </form>
    <ul>
        <% playlists.forEach(playlist => { %>
            <li>
                <h2><%= playlist.name %></h2>
                <form action="/playlists/<%= playlist.id %>/songs" method="POST">
                    <input type="text" name="title" placeholder="Song Title" required>
                    <input type="text" name="artist" placeholder="Artist" required>
                    <input type="text" name="url" placeholder="Song URL" required>
                    <button type="submit">Add Song</button>
                </form>
                <ul>
                    <% playlist.songs.forEach(song => { %>
                        <li><%= song.title %> by <%= song.artist %> - <a href="<%= song.url %>">Listen</a></li>
                    <% }) %>
                </ul>
            </li>
        <% }) %>
    </ul>
</body>
</html>